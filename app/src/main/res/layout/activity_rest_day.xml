<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/rest">

    <!-- Card trung tÃ¢m -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="#121212"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Icon nghá»‰ ngÆ¡i -->
            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/ic_rest"

                android:layout_marginBottom="16dp"/>

            <!-- TiÃªu Ä‘á» -->
            <TextView
                android:id="@+id/tvRestDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rest Day"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#FFC107"
                android:layout_marginBottom="8dp"/>

            <!-- MÃ´ táº£ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your body needs recovery today.\nTake a break and recharge ðŸ’ª"
                android:textSize="16sp"
                android:textColor="#BDBDBD"
                android:gravity="center"
                android:layout_marginBottom="28dp"/>

            <!-- Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Back to Main"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:backgroundTint="#FFC107"
                app:cornerRadius="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
